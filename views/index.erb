<div class="col-md-4 col-md-offset-4">
  <form action="jobs" method="post">
    <div class="form-group">
      <label>Skill, Job Position, or Company</label>
      <input type="text" class="form-control" name="searchTerms" placeholder="Skill, Job Position, or Company">
    </div>
    <button type="submit" class="btn btn-default">Find Jobs</button>
  </form>
</div>
<div class="col-md-12">
  <% unless results.nil? %>
    <br>
    <h2>Finding <%= term %> jobs in <%= location %></h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Employer</th>
          <th>Location</th>
          <th>Glassdoor Rating</th>
        </tr>
      </thead>
      <tbody>
        <% results.each do |result| %>
          <tr>
            <td><a href="<%=result[:link]%>" target="_blank"><%=result[:title]%></a></td>
            <td><%=result[:employer]%></td>
            <td><%=result[:location]%></td>
            <td><%=result[:rating]%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
