<h1>
	Dice Scraper
</h1>
<h3>search by job title, skills, keywords or company name</h3>

<form action="/index" method="post">
	<textarea type="text" name ="search_topic" placeholder="search keywords"></textarea>
	<br>
	<input type="submit" value="Scrape">
</form>
<br>
<%if searched%>
	<%=company_details%>
	<h3>
		Jobs in <%=city%> <%=state%> <%=country%>
	</h3>
	<table class="table table-condensed">
	<tr>
		<td>Title</td>
		<td>Company</td>
		<td>Link</td>
		<td>Location</td>
		<td>Posting Date</td>
		<td>Company ID</td>
		<td>Job ID</td>
	</tr>
  <%results.each do |result|%>
    <tr>
      <%result.each do |detail|%>
        <td><%=detail%></td>
      <%end%>
    </tr>
  <%end%>
</table>
<%end%>