<div class="row">
  <div class="col-12">
    <h1><%= job.title %> <span style="font-size: 50%;">(id <%= job.job_id %>)</span></h1>
    <p>at <a href="/company?name=<%= job.company %>&location=<%= job.location %>"><%= job.company %></a> in <%= job.location %> <span style="font-size: 80%;">(id <%= job.company_id %>)</span></p>
    <p>Posted: <%= job.date_posted %></p>
    <p>Salary: <%= job.salary %></p>
    <p>Remote?: <%= job.remote %></p>
  </div> <!-- col-12 -->
</div> <!-- row -->

<div class="row">
  <div class="col-12">
    <h2>Description</h2>
    <p><%= job.description %></p>
  </div> <!-- col-6-xs -->
</div> <!-- row -->

<div class="row buttons">
  <div class="col-sm">
    <a href="<%= job.description_url %>" target="_blank" role="button" class="btn btn-outline-primary btn-sm">See this Job on Dice</a>
  </div><!-- col -->

  <div class="col-sm">
    <a href="/company?name=<%= job.company %>&location=<%= job.location %>" role="button" class="btn btn-outline-primary btn-sm">See Reviews for <%= job.company %></a>
  </div><!-- col -->

  <div class="col-sm">
    <a href="/results" target="_blank" role="button" class="btn btn-outline-primary btn-sm">Back to Results</a>
  </div><!-- col -->
</div>