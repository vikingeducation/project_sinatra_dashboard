<% num_results = employers.size if num_results == 0 %>
<div class="main-content container">
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-6">
        Search result for "<strong><%= query %></strong>":
        </div>
        <div class="col-xs-6 text-right"> 
        <a href='https://www.glassdoor.com/index.htm'>powered by <img src='https://www.glassdoor.com/static/img/api/glassdoor_logo_80.png' title='Job Search' /></a>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <% employers.each_with_index do |employer, index| %>
        <% if index < num_results %>
          <div class="table-responsive table-container"> 
            <table class="table table-striped table-bordered">
              <tbody>
                <tr>
                  <th class="col-sm-3">
                    <strong>Name ( ID ) | <a href="<%= "http://" + employer['website'] %>">Website</a></strong>
                  </th>
                  <td>
                    <%= employer['name'] %> ( <%= employer['id'] %> )
                  </td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Overall Rating | Description</strong></th>
                  <td><%= employer['overallRating'] %> &nbsp; | &nbsp; <%= employer['ratingDescription'] %></td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Culture and Values Rating</strong></th>
                  <td><%= employer['cultureAndValuesRating'] %></td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Senior Leadership Rating</strong></th>
                  <td><%= employer['seniorLeadershipRating'] %></td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Compensation and Benefits Rating</strong></th>
                  <td><%= employer['compensationAndBenefitsRating'] %></td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Career Opportunites Rating</strong></th>
                  <td><%= employer['careerOpportunitiesRating'] %></td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Work Life Balance Rating</strong></th>
                  <td><%= employer['workLifeBalanceRating'] %></td>
                </tr>
                <tr>
                  <th class="col-sm-3"><strong>Featured Review</strong></th>
                  <td>
                    <a href="<%= employer['featuredReview']['attributionURL'] %>">
                      <%= employer['featuredReview']['headline'] %> 
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

