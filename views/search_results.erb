<div class="container" style="margin-top:50px">
<h1>Your Results for <%= city%>, <%= region %></h1>
<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Company</th>
    <th>Link</th>
    <th>Location</th>
    <th>Posting Date</th>
    <th>Overall</th>
    <th>Culture</th>
    <th>Balance</th>
    <th>Opportunities</th>
    <th>Leadership</th>
    <th>Compensation</th>
  </tr>
  <tbody>
    <% get_results(q, l).each do |result| %>
        <tr>
            <% result.each_with_index do |value, index| %>
                <% if index == 2%>
                    <td><a href="<%= value %>" target="_blank">Job Link</a></td>
                <% else %>
                    <a href="<%= result[2] %>" target="_blank"><td><%= value %></td></a>
                <% end %>



            <% end %>
            <% company = CompanyProfiler::CompanyProfiler.new %>
            <% company.get_request(result[1])%>
            <td><%= company.overall_rating %></td>
            <td><%= company.culture_rating %></td>
            <td><%= company.balance_rating %></td>
            <td><%= company.career_ops_rating %></td>
            <td><%= company.leadership_rating %></td>
            <td><%= company.compensation_rating %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>

