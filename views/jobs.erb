<div class="main-content container">
  <div class="panel panel-success">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-12">
        Search result for "<strong><%= query %></strong>" 
        ( jobs within <strong><%= radius %></strong> miles of zip code <strong><%= zip_code %></strong> ):
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="table-responsive table-container"> 
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Company</th>
              <th>Title</th>
              <th>Location</th>
              <th>Date Posted</th>
              <th>CID</th>
              <th>JID</th>
              <% if glassdoor == 'yes' %>
                <th>Company Name (Glassdoor)</th>
                <th>Overall Rating</th>
                <th>Culture and Values Rating</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% jobs.each_with_index do |job, index| %>
                <tr>
                  <td><%= job['company'] %></td>
                  <td>
                    <a href="<%= job['link'] %>"><%= job['title'] %></a>
                  </td>
                  <td><%= job['location'] %></td>
                  <td><%= job['posted_relative'] %></td>
                  <td><%= job['company_id'] %></td><td><%= job['job_id'] %></td>
                  <% if glassdoor == 'yes' && !employers[index].nil? %>
                    <td><%= employers[index]['name'] %></td>
                    <td><%= employers[index]['overallRating'] %></td>
                    <td><%= employers[index]['cultureAndValuesRating'] %></td>
                  <% elsif glassdoor == 'yes' %>
                    <td></td>
                    <td></td>
                    <td></td>
                  <% end %>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>